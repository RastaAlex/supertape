{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false,
        "babelOptions": {
            "sourceType": "module",
            "plugins": [
                "@babel/plugin-syntax-top-level-await"
            ]
        }
    },
    "overrides": [{
        "files": "bin/*.js",
        "rules": {
            "no-process-exit": "off"
        }
    }, {
        "files": "*.md{js}",
        "rules": {
            "no-unreachable": "off"
        }
    }],
    "rules": {
        "node/no-unsupported-features/es-syntax": "off"
    },
    "extends": [
        "plugin:node/recommended",
        "plugin:putout/recommended"
    ],
    "plugins": [
        "node",
        "putout"
    ]
}
